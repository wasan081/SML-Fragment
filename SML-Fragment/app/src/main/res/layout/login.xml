<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Login"
    android:background="@drawable/dsss">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView2" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:id="@+id/imageView"
                        android:src="@drawable/sit"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Smart Learning Manager"
                        android:textSize="27dp"
                        android:textColor="#ffffff"
                        android:id="@+id/TxtUid"
                        android:layout_below="@+id/imageView"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true" />

                    <EditText
                        android:layout_width="270dp"
                        android:layout_height="37dp"
                        android:id="@+id/IdForm"
                        android:hint="Username"
                        android:textSize="20dp"
                        android:width="250dp"
                        android:background="#ffffff"
                        android:inputType="text"
                        android:layout_marginTop="100dp"
                        android:layout_below="@+id/TxtUid"
                        android:layout_centerHorizontal="true"
                        style="@android:style/Theme.Black.NoTitleBar"
                        android:paddingLeft="15dp" />

                    <EditText
                        android:layout_width="270dp"
                        android:layout_height="37dp"
                        android:inputType="textPassword"
                        android:textSize="20dp"
                        android:ems="10"
                        android:id="@+id/PwdForm"
                        android:hint="Password"
                        android:background="#ffffff"
                        android:layout_marginTop="20dp"
                        android:width="250dp"
                        android:layout_below="@+id/IdForm"
                        android:layout_centerHorizontal="true"
                        android:paddingLeft="15dp" />

                    <Button
                        style="?android:attr/button"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:text="@string/login"
                        android:id="@+id/LoginBtn"
                        android:width="100dp"
                        android:onClick="onClickLogin"
                        android:layout_below="@+id/PwdForm"
                        android:layout_marginTop="25dp"
                        android:textSize="20dp"
                        android:textColor="#ffffff"
                        android:background="#0072bc"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/err"
                        android:textSize="15dp"
                        android:textColor="#ff0000"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/LoginBtn"
                        android:layout_centerHorizontal="true" />

                </LinearLayout>
</ScrollView>
    </LinearLayout>
</RelativeLayout>
